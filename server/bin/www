#!/usr/bin/env node

/**
 * Entry point
 * author: beanpole
 * last modified: 2020-10-13
 */

const mongoose = require('mongoose');

const config = require('../config');
const mongoConnector = require('../main/dbms/init-mongoose');
const lowdbConnector = require('../main/dbms/init-db');
const saltConnector = require('../salt-connector')
const webApiServer = require('../server')
const { tcpPort, wsPort, webPort } = require('../config').server;

mongoConnector.start(config, mongoose);
lowdbConnector.start('../db.json');
webApiServer.start({ port: webPort })
saltConnector.start({ tcpPort, wsPort })
